<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%=dayName %>
        </h1>
    </div>




    <div class="box">
        <% for(var i=0; i<(newTask.length);i++){ %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newTask[i] %>
                </p>
            </div>
            <% } %>

                <form action="/" method="post" class="item">
                    <input type="text" name="task" id=" " placeholder="New Task" autocomplete="off">
                    <button type="submit">+</button>
                </form>

    </div>
    <%- include("footer") -%>