<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%=dayName %>
        </h1>
    </div>




    <div class="box">
        <% newTask.forEach(element=> { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= element._id %>" onChange="this.form.submit()">
                    <p>
                        <%= element.content %>
                    </p>
                </div>
                <input type="hidden" name="del" value="<%=dayName%>">
            </form>
            <% }) %>

                <form action="/" method="post" class="item">
                    <input type="text" name="task" id=" " placeholder="New Task" autocomplete="off">
                    <button type="submit" name="list" value="<%=dayName%>">+</button>
                </form>

    </div>
    <%- include("footer") -%>